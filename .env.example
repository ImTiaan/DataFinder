# The URL to the login page (leave empty if not logging in)
LOGIN_URL=

# The main website URL to start scraping from (required)
TARGET_URL=

# Optional CSS selector to verify successful login (e.g., '.dashboard')
SELECTOR=

# Your login credentials (leave empty if using saved session or no login)
USERNAME=
PASSWORD=

# Two-factor authentication secret key (if required)
TOTP_SECRET=

# Set to 'true' to run browser in background, 'false' to see it (default: false)
HEADLESS=false

# Directory to store the persistent browser profile (cookies, session)
BROWSER_PROFILE_DIR=.browser_profile

# Directory where CSV output files will be saved
OUTPUT_DIR=outputs

# Set to 'true' to crawl the sitemap.xml for product links, 'false' for single page
CRAWL_SITEMAP=false

# Limit the number of products to scrape (0 = no limit, useful for testing)
MAX_PRODUCTS=0
